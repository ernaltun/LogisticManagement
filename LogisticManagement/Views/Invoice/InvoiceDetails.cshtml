@model InvoiceViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Fatura Detayı</h2>

<div>
    <h4>Fatura Bilgileri</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Fatura Numarası:
        </dt>
        <dd class="col-sm-10">
            @Model.Invoice.InvoiceNo
        </dd>
        <dt class="col-sm-2">
            Fatura Tipi:
        </dt>
        <dd class="col-sm-10">
            @Model.Invoice.InvoiceType
        </dd>
        <dt class="col-sm-2">
            ETTN:
        </dt>
        <dd class="col-sm-10">
            @Model.Invoice.ETTN
        </dd>
        <dt class="col-sm-2">
            Tutar:
        </dt>
        <dd class="col-sm-10">
            @Model.Invoice.Amount
        </dd>
    </dl>
</div>

<div>
    <h4>Müşteri Bilgileri</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Müşteri Adı:
        </dt>
        <dd class="col-sm-10">
            @Model.Customer.CustomerName
        </dd>
        <dt class="col-sm-2">
            Müşteri Adresi:
        </dt>
        <dd class="col-sm-10">
            @Model.Customer.Address
        </dd>
        <dt class="col-sm-2">
            Müşteri Email:
        </dt>
        <dd class="col-sm-10">
            @Model.Customer.CustomerEmail
        </dd>
        <dt class="col-sm-2">
            Müşteri Telefon Numarası:
        </dt>
        <dd class="col-sm-10">
            @Model.Customer.PhoneNumber
        </dd>
        <dt class="col-sm-2">
            Müşteri Vergi Numarası:
        </dt>
        <dd class="col-sm-10">
            @Model.Customer.TaxNo
        </dd>
        <!-- Diğer müşteri bilgileri buraya eklenebilir -->
    </dl>
</div>

<div>
    <h4>Ürünler</h4>
    <hr />
    <table class="table">
        <thead>
            <tr>
                <th>Ürün Adı</th>
                <th>Açıklama</th>
                <th>Fiyat</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.Invoice.Products)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>@product.Description</td>
                    <td>@product.Price</td>
                </tr>
            }
        </tbody>
    </table>
</div>