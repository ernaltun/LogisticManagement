@model Permit
@{
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-action="PermitEditConfirm" method="post" class="form-group">
	<div>
		<p> Kalan İzin Hakkı: @ViewBag.UserPermitRemaining</p>
	</div>
	<input type="hidden" asp-for="@Model.PermitId" />
	<input type="hidden" asp-for="@Model.User.UserId" />
	<div class="form-group">
		<label>İzin Başlangıç</label>
		<input type="text" class="form-control" name="PermitStart" value="@Model.PermitStart" />
	</div>
	<div class="form-group">
		<label>İzin Bitiş</label>
		<input type="text" class="form-control" name="PermitFinish" value="@Model.PermitFinish" />
	</div>
	<div class="form-group">
		<label>Açıklama</label>
		<input type="text" class="form-control" name="Description" value="@Model.Description" />
	</div>
	<div class="form-group">
		<label>İzin Tipi</label>
		<input type="text" class="form-control" name="PermitType" value="@Model.PermitType" />
	</div>
	<div class="form-group form-switch">
		<input class="form-check-input form-group" type="checkbox" name="IsApproval" value="true" id="flexSwitchCheckDefault">
		<label class="form-check-label" for="flexSwitchCheckDefault">İzni onayla</label>
	</div>
	<button type="submit" class="btn btn-primary kaydetBtn">Kaydet</button>
</form>